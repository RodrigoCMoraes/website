{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "container-build",
            "type": "shell",
            "command": "docker build -t website ."
        },
        {
            "label": "container-run",
            "type": "shell",
            "command": "docker run --rm -p 8080:80 --name website website",
            "dependsOn": ["container-build"]
        },
        {
            "label": "container-stop",
            "type": "shell",
            "command": "docker stop $(docker ps -a -q --filter=\"name=website\")"
        }
    ]
}